[flake8]
# Flake8 Configuration for QubitPulseOpt
# This file configures flake8 linting for compatibility with Black formatter
# and adherence to Power of 10 coding standards

# Maximum line length (88 is Black's default)
max-line-length = 88

# Maximum cyclomatic complexity (Power of 10 Rule: simple control flow)
max-complexity = 10

# Ignore specific error codes
# E203: Whitespace before ':' (conflicts with Black)
# W503: Line break before binary operator (outdated PEP 8 recommendation)
# E501: Line too long (handled by Black formatter)
extend-ignore = E203, W503, E501

# Exclude directories from linting
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    ENV,
    build,
    dist,
    *.egg-info,
    .eggs,
    .tox,
    docs/science/auto_generated,
    notebooks/.ipynb_checkpoints

# Per-file ignores
# Ignore specific rules in test files where needed
per-file-ignores =
    # Test files can have long lines and unused imports
    tests/*:E501,F401,F811
    # __init__.py files may have unused imports (re-exports)
    __init__.py:F401
    # Configuration files may have complex structures
    src/config.py:E501

# Docstring checking (using flake8-docstrings plugin)
# D100: Missing docstring in public module
# D104: Missing docstring in public package
# D203: 1 blank line required before class docstring (conflicts with D211)
# D213: Multi-line docstring summary should start at the second line (conflicts with D212)
# We use D211 (no blank line before class docstring) and D212 (summary on first line)
ignore = D100, D104, D203, D213

# Docstring convention: numpy (scientific computing standard)
docstring-convention = numpy

# Show source code for each error
show-source = True

# Show flake8 statistics
statistics = True

# Count errors
count = True

# Output format
# Options: default, pylint, quiet-filename, quiet-nothing
format = default

# Enable additional checks from plugins
# flake8-bugbear: Finds likely bugs and design problems
# flake8-docstrings: Checks docstring conventions
# To use these, install: pip install flake8-bugbear flake8-docstrings

# Bugbear specific settings
# B950: Line too long (more lenient than E501, allows overage up to 10%)
# We ignore B950 since we use Black for line length

# Import order checking (if using flake8-import-order plugin)
# We use isort instead, so this is optional
# import-order-style = google
# application-import-names = src

# Type annotation checking (if using flake8-annotations plugin)
# suppress-none-returning = True
# suppress-dummy-args = True

# Naming conventions (if using pep8-naming plugin)
# N802: Function name should be lowercase
# N803: Argument name should be lowercase
# N806: Variable in function should be lowercase
# These are already covered by base flake8

# Maximum string quote violations to report per file
# inline-quotes = double
